@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Products</h1>

</div>
<div class="row">
    <a href="@Url.Action("NewProduct","Product")" class="btn btn-primary" style="margin-bottom:10px">New</a>
</div>
<div class="row">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>
                    <td>@item.Price</td>
                    <td>
                        <a href="@Url.Action("NewProduct","Product", new { id = item.Id })" class="btn btn-warning">Update</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
